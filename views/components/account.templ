package components

templ Account() {
    @AccountStyle()
    <a class="account-container" href="/register">
        <img class="account-avatar" src="/public/images/avatar.png" alt="User Avatar" />
        <span class="account-username">Username</span>
    </a>
}

templ AccountStyle() {
    <style>
        .account-container {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .account-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
        }

        .account-username {
            color: var(--color-white);
            font-size: 16px;
        }
    </style>
}
